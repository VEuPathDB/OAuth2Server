{
  "Configuration": {
    "Appenders": {
      "appender": [{
        "type": "RollingFile",
        "name": "oauth-log",
        "fileName": "/opt/logs/tomcat/oauth/oauth.log",
        "filePattern": "/opt/logs/tomcat/oauth/oauth.log.%i",
        "append": "true",
        "PatternLayout": { "pattern": "%-9r [%-5p] [%d{yyyy/MM/dd|HH:mm:ss}] - %C:%L - %m%n" },
        "Policies": {
          "SizeBasedTriggeringPolicy": { "size": "100 MB" }
        },
        "DefaultRolloverStrategy": { "max": "100" }
      },{
        "type": "RollingFile",
        "name": "login-log",
        "fileName": "/opt/logs/tomcat/oauth/logins.log",
        "filePattern": "/opt/logs/tomcat/oauth/logins.log.%i",
        "append": "true",
        "PatternLayout": { "pattern": "%d{yyyy-MM-dd|HH:mm:ss} %m%n" },
        "Policies": {
          "SizeBasedTriggeringPolicy": { "size": "100 MB" }
        },
        "DefaultRolloverStrategy": { "max": "100" }
      },{
        "type": "Console",
        "name": "STDOUT",
        "target": "SYSTEM_OUT",
        "PatternLayout": { "pattern": "%-9r [%-5p] [%d{yyyy/MM/dd|HH:mm:ss}] - %C:%L - %m%n" }
      }]
    },
    "Loggers": {
      "Logger": [{
        "name": "org.apache",
        "level": "warn"
      },{
        "name": "org.apache.catalina.core",
        "level": "info"
      },{
        "name": "org.gusdb",
        "level": "info"
      },{
        "name": "org.gusdb.oauth2.assets.StaticResource",
        "level": "info"
      },{
        "name": "org.gusdb.oauth2.eupathdb.AccountDbAuthenticator.LoginLogger",
        "level": "info",
        "AppenderRef": { "ref": "login-log" }
      }],
      "Root": {
        "level": "warn",
        "AppenderRef": { "ref": "oauth-log" }
      }
    }
  }
}
